<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/currency_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bitstamp_logo"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/transactionHistory"/>

    <Button
        android:id="@+id/transactionHistory"
        android:layout_above="@id/orderBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction History" />

    <Button
        android:id="@+id/orderBook"
        android:text="Order Book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderBook"
        android:id="@+id/priceAlert"
        android:text="Price Alert" />


</RelativeLayout>